---

const footerItems = [
    {
        name: 'Inicio',
        href: '#inicio'
    },
    {
        name: 'Sobre mí',
        href: '#sobre-mi'
    },
    {
        name: 'Proyectos',
        href: '#proyectos'
    },
    {
        name: 'Contacto',
        href: '#contacto'
    },
]

const props = Astro.props

---

<footer>
    <div class="container-footer">
        <div class="container-boxs">
            <div class="container-logo">
                <img src="/logo.png" alt="Logo">
            </div>
            <div class="container-a">
                <ul>
                    {
                        footerItems.map((x) => {
                            return (
                                <li>
                                    <a href={x.href} id="ancor">{x.name}</a>
                                </li>
                            )
                        })
                    }
                </ul>
            </div>
            <div class="container-networks">
                <a href="https://www.instagram.com/nicoo_guardatti/" target="_blank">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" {...props}>
                        <g fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                            <rect width="20" height="20" x="2" y="2" rx="5" ry="5" />
                            <path d="M16 11.37A4 4 0 1 1 12.63 8A4 4 0 0 1 16 11.37m1.5-4.87h.01" />
                        </g>
                    </svg>
                </a>
                <a href="https://github.com/Guardatti" target="_blank">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" {...props}>
                        <g fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5c.08-1.25-.27-2.48-1-3.5c.28-1.15.28-2.35 0-3.5c0 0-1 0-3 1.5c-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.4 5.4 0 0 0 4 9c0 3.5 3 5.5 6 5.5c-.39.49-.68 1.05-.85 1.65S8.93 17.38 9 18v4" />
                            <path d="M9 18c-4.51 2-5-2-7-2" />
                        </g>
                    </svg>
                </a>
                <a href="https://www.linkedin.com/in/nicol%C3%A1s-guardatti-14b22125b/" target="_blank">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" {...props}>
                        <g fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2a2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6M2 9h4v12H2z" />
                            <circle cx="4" cy="4" r="2" />
                        </g>
                    </svg>
                </a>
            </div>
        </div>
        <div class="container-copyright">
            <p>
                Copyright <strong>Nicolás Guardatti</strong> - 2025. Todos los derechos reservados.
            </p>
        </div>
    </div>
</footer>

<style>
    
    footer {
        width: 100%;
        background-color: #191919;
        padding: 2rem 0 1rem 0;
    }

    .container-footer { 
        max-width: 768px;
        padding: 0 1rem 0 1rem;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .container-boxs {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }
    
    .container-logo {
        display: flex
    }

    .container-a ul {
        display: flex;
        flex-direction: column;
        gap: 5px;
    } 

    .container-a ul li a {
        color: #fff;
    }

    .container-networks {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
    }

    .container-copyright p {
        color: #fff;
        text-align: center;
        font-size: 14px;
    }

    @media screen and (min-width: 769px) {
        .container-boxs {
            flex-direction: row;
            justify-content: space-between;
        }
    }

</style>