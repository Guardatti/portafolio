---

const props = Astro.props

---

<section id="proyectos">
    <div class="container-projects">
        <div class="container-1">
            <h2>Proyectos</h2>
        </div>
        <div class="projects">
            <article>
                <div class="container-2">
                    <img src="/vanilie.png" alt="VANILIE">
                </div>
                <div class="container-3">
                    <h3>VANILIE.</h3>
                    <div class="container-4">
                        <img src="/tools/react.svg" alt="React">
                        <img src="/tools/node.svg" alt="Node">
                        <img src="/tools/express.svg" alt="Express">
                        <img src="/tools/mongo.svg" alt="Mongo">
                        <img src="/tools/mongoose.svg" alt="Mongoose">
                        <img src="/tools/vite.svg" alt="Vite">
                    </div>
                    <a href="https://github.com/Guardatti/vanilie" target="_blank">
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 24 24" {...props}>
                            <g fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                                <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5c.08-1.25-.27-2.48-1-3.5c.28-1.15.28-2.35 0-3.5c0 0-1 0-3 1.5c-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.4 5.4 0 0 0 4 9c0 3.5 3 5.5 6 5.5c-.39.49-.68 1.05-.85 1.65S8.93 17.38 9 18v4" />
                                <path d="M9 18c-4.51 2-5-2-7-2" />
                            </g>
                        </svg>
                        <span>Ver en Gihthub</span>
                    </a>
                </div>
            </article>
            <article>
                <div class="container-2">
                    <img src="/bearx.png" alt="BearX">
                </div>
                <div class="container-3">
                    <h3>BearX</h3>
                    <div class="container-4">
                        <img src="/tools/react.svg" alt="React">
                        <img src="/tools/vite.svg" alt="Vite">
                    </div>
                    <a href="https://github.com/Guardatti/BearX" target="_blank">
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 24 24" {...props}>
                            <g fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                                <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5c.08-1.25-.27-2.48-1-3.5c.28-1.15.28-2.35 0-3.5c0 0-1 0-3 1.5c-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.4 5.4 0 0 0 4 9c0 3.5 3 5.5 6 5.5c-.39.49-.68 1.05-.85 1.65S8.93 17.38 9 18v4" />
                                <path d="M9 18c-4.51 2-5-2-7-2" />
                            </g>
                        </svg>
                        <span>Ver en Gihthub</span>
                    </a>
                </div>
            </article>
        </div>
    </div>
</section>

<style>
    
    section {
        width: 100%;
        background-color: #191919;
    }

    .container-projects {
        max-width: 768px;
        margin: 0 auto;
        padding: 2rem 1rem 2rem 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .container-1 h2 {
        color: #fff;
        text-align: center;
        font-weight: 400;
    }

    .projects {
        padding-top: 2rem;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 45px;
        width: 100%;
    }

    .projects article {
        width: 345px;
        background-color: #12131b;
        border-radius: 10px;
        border: 1px solid #fff;
        border-color: #797979; 
        overflow: hidden;
    }

    .container-2 {
        height: 250px;
        overflow: hidden;
    }

    .container-2 img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: top;
        display: block;
    }

    .container-3 {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        padding: 1rem 0 1rem 0;
    }

    .container-3 h3 {
        color: #fff;
        font-weight: 400;
        text-align: center;
    }

    .container-3 a {
        background-color: #5a5f66;
        border: none;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 5px;
        padding: 0.5rem 0 0.5rem 0;
        width: 90%;
        border-radius: 10px;
        transition: 0.1s ease-in;
    }

    .container-3 a span {
        color: #fff;
        font-size: 14px;
    }

    .container-4 {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
    }

    .container-4 img {
        width: 25px;
        height: 25px;
    }

</style>